<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>StudentPortalWeb</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
  	<servlet-name>course-controller</servlet-name>
  	<servlet-class>org.avco.controller.CourseController</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>course-controller</servlet-name>
  	<url-pattern>/courses</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>student-course-controller</servlet-name>
  	<servlet-class>org.avco.controller.StudentCoursesController</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>student-course-controller</servlet-name>
  	<url-pattern>/getAllCourses</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>student-controller</servlet-name>
  	<servlet-class>org.avco.controller.StudentController</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>student-controller</servlet-name>
  	<url-pattern>/students</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>get-student-courses-controller</servlet-name>
  	<servlet-class>org.avco.controller.GetAllStudentCoursesController</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>get-student-courses-controller</servlet-name>
  	<url-pattern>/studentcoursesenrolled</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>view--courses-controller</servlet-name>
  	<servlet-class>org.avco.controller.ViewCourseController</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>view--courses-controller</servlet-name>
  	<url-pattern>/viewCourseInfo</url-pattern>
  </servlet-mapping>
  
  
</web-app>